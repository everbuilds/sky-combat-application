<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".TutorialActivity">

    <ImageView
        android:id="@+id/slideImage"
        android:layout_width="323dp"
        android:layout_height="266dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slideText"
        android:layout_width="348dp"
        android:layout_height="285dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:textColor="#ecb02c"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideImage" />

    <ImageButton
        android:id="@+id/beforeButton"
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/before_animated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="135dp"
        android:layout_height="63dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/next_animated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>