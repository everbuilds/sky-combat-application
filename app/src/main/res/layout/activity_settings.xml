<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/menu"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/score"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:shadowColor="#a0771e"
        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="Volume musica"
        android:textColor="#ecb02c"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"/>

    <TextView
        android:id="@+id/score2"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:shadowColor="#a0771e"
        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="ModalitÃ  \nfantasma"
        android:textColor="#ecb02c"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/ghost_switch"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume_seekBar" />

    <SeekBar
        android:id="@+id/volume_seekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:max="10"
        android:progress="10"
        android:progressTint="#ecb02c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Switch
        android:id="@+id/ghost_switch"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume_seekBar" />

    <ImageButton
        android:id="@+id/tutorialButton"
        android:layout_width="272dp"
        android:layout_height="102dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/tutorial_button_animated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>