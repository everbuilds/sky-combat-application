<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".LeaderboardsActivity">

    <ImageView
        android:id="@+id/imageView4"

        android:layout_width="fill_parent"
        android:layout_height="750dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/leaderboards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stars" />

    <TextView
        android:id="@+id/leaderboards"
        android:layout_width="378dp"
        android:layout_height="45dp"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:shadowColor="#282827"
        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="LEADERBOARDS"
        android:textColor="#354815"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/punteggiomaggiore"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/maxscorebutton_animated"
        android:text="punteggio maggiore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboards" />

    <ImageButton
        android:id="@+id/playersconfitti"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/playersdefeatedbutton_animated"
        android:text="player sconfitti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboards" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="321dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/punteggiomaggiore"
        app:layout_constraintVertical_bias="0.176">

        <TextView
            android:id="@+id/playerleaderboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/old_school_united_stencil"
            android:gravity="left"
            android:text="LEADERBOARDS"
            android:textColor="#354815"
            android:textSize="40sp" />
    </ScrollView>

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="left"
        android:text=""
        android:textColor="#354815"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>